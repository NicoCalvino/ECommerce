<%- include('../partials/header',{hojaDeEstilo:"/css/stylesProdSearch.css",titulo:tituloBusqueda}) %>

<main>
    <div class="espacio-header"></div>
    <section class="productos">
        <h3 class="titulo-seccion"><%= tituloBusqueda %></h3>
        <ul class="vinculos-productos">
            <% for (let i=0;i < resultado.length ;i++){ %>
                <li>
                    <a href="/products/<%= resultado[i].id %>">
                        <img src="/images/productos/<%= resultado[i].imagenes[0].imagen %>" alt="Otro Producto  <%= i + 1 %>" class="imagenes-seleccionables">
                        <div class="titulo-precio">
                            <p class="precio-producto">$ <%= resultado[i].precio %></p>
                            <p class="titulo-producto"><%= resultado[i].nombre %></p>
                        </div>
                    </a>
                </li>
            <% } %>
        </ul>
    </section>
    <section class="pagNumbers">
        <% if(pagina > 1){ %>
            <a class="pagina" href=<%= "/products/search/" + criterio + "?valor=" + valor + "&pag=" + (Number(pagina)-1) %>><<</a>
        <% } %>
            <p class="pagina" ><%= pagina %></p>
            <% console.log(pagina + "    " + totalPaginas) %>
        <% if(pagina < totalPaginas){ %>
            <a class="pagina" href=<%= "/products/search/" + criterio + "?valor=" + valor + "&pag=" + (Number(pagina)+1) %>>>></a>
        <% } %>    
    </section>
</main>

<%- include ("../partials/footer") %>